# general setting 
set -g mouse on
set -g display-time 1000
# vi is good
setw -g mode-keys vi
# bind prefix key
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# vi-copy mode
bind Space copy-mode
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind p paste-buffer  # paste from the top pate buffer
#bind -t vi-copy Escape cancel # break the copycat so removed

# mouse scrolling
bind -T root WheelUpPane   if-shell -F -t = "#{alternate_on}" "send-keys -M" "select-pane -t =; copy-mode -e; send-keys -M"
bind -T root WheelDownPane if-shell -F -t = "#{alternate_on}" "send-keys -M" "select-pane -t =; send-keys -M"

# edit configuration
bind E new-window -n '~/.tmux.conf' "sh -c '\${EDITOR:-vim} ~/.tmux.conf'"
# reload configuration
bind R source-file ~/.tmux.conf \; display 'Tmux source done.'

# List of plugins {

########################################################################
# $ git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm  #
########################################################################

set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-copycat'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/tmux-pain-control'

# }

# plugins settings {

set -g @prefix_highlight_fg 'white' # default is 'colour231'
set -g @prefix_highlight_bg 'blue'  # default is 'colour04'
set -g @prefix_highlight_show_copy_mode 'on'
set -g @prefix_highlight_copy_mode_attr 'fg=black,bg=yellow,bold' # default is 'fg=default,bg=yellow'

set -g @pane_resize "10"

# }

# status bar
set-option -g status-bg colour235 #base02
set-option -g status-fg colour136 #yellow
set-option -g status-attr default
set-option -g status-right '#{prefix_highlight}[#(echo $USER)@#h]'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
