#!/bin/bash

cd "$HOME"

echo -e "\n\033[1;31m:: Install oh-my-zsh \033[m"
git clone https://github.com/zsh-users/antigen.git ~/.antigen

echo -e "\n\033[1;31m:: Install tpm \033[m"
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

echo -e "\n\033[1;31m:: Install vundle \033[m"
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

echo -e "\n\033[1;31m:: Install spacemacs \033[m"
git clone https://github.com/syl20bnr/spacemacs.git ~/.emacs.d
git clone https://github.com/PhilipDaniels/windows-defaults ~/.emacs.d/layers/windows-defaults

